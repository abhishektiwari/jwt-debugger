{
  "name": "jwt-debugger",
  "version": "0.0.4",
  "description": "Open Source JWT Debugger App. Parse and validate a JSON Web Token (JWT).",
  "productName": "jwt-debugger",
  "homepage": "https://github.com/abhishektiwari/jwt-debugger",
  "license": "MIT",
  "main": "electron.js",
  "author": "Abhishek Tiwari <abhishek@abhishek-tiwari.com>",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "NODE_ENV=production vite build --mode production",
    "preview": "vite preview",
    "electron": "vite electron",
    "lint": "eslint --ext .js,.vue ./",
    "test": "vitest",
    "pack": "vite build && electron-builder --dir",
    "dist": "vite build && electron-builder",
    "electron:build": "vite build && electron-builder",
    "electron:build:mac": "vite build && electron-builder --mac",
    "electron:build:win": "vite build && electron-builder --win",
    "electron:build:linux": "vite build && electron-builder --linux",
    "electron:build:linux:arm64": "vite build && electron-builder --linux --arm64",
    "electron:build:all": "vite build && electron-builder --mac --win --linux"
  },
  "dependencies": {
    "@quasar/extras": "^1.17.0",
    "@vitejs/plugin-vue": "^5.2.4",
    "axios": "^1.13.4",
    "jose": "^6.1.3",
    "jwk-to-pem": "^2.0.7",
    "jws": "^4.0.1",
    "qs": "^6.14.1",
    "quasar": "^2.18.6",
    "vue": "^3.5.27",
    "vue-json-pretty": "^2.6.0",
    "vue-router": "^5.0.1"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.10.0",
    "@types/node": "^24.10.9",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.24",
    "buffer": "^6.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "eslint": "^8.57.1",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.6.0",
    "eslint-plugin-vue": "^9.33.0",
    "jsdom": "^26.1.0",
    "postcss": "^8.5.6",
    "util": "^0.12.5",
    "vite": "^6.4.1",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^3.2.4",
    "workbox-window": "^7.4.0"
  },
  "engines": {
    "node": ">= 16.0.0",
    "npm": ">= 8.0.0",
    "yarn": ">= 1.22.0"
  },
  "browserslist": [
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "build": {
    "appId": "io.jwt-debugger",
    "productName": "JWT Debugger",
    "artifactName": "${name}-${os}.${ext}",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron.js",
      "package.json"
    ],
    "mac": {
      "icon": "public/icon-512x512.png",
      "category": "public.app-category.developer-tools",
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        },
        {
          "target": "zip",
          "arch": ["arm64", "x64"]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "public/icon-512x512.png",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "JWT Debugger",
      "artifactName": "jwt-debugger-windows-setup.${ext}"
    },
    "portable": {
      "artifactName": "jwt-debugger-windows-portable.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "deb",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "tar.gz",
          "arch": ["arm64"]
        }
      ],
      "icon": "public/pwa-512x512.png",
      "category": "Development",
      "maintainer": "Abhishek Tiwari <abhishek@abhishek-tiwari.com>",
      "vendor": "JWT Debugger",
      "synopsis": "Debug and validate JSON Web Tokens"
    }
  }
}
